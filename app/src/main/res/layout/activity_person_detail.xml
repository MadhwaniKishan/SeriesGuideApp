<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".activity.PersonDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:id="@+id/fm"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/personimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@color/primary_text" />
    <TextView
        android:id="@+id/personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"
        android:layout_marginLeft="13dp"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"
        android:textColor="@color/primary_text"
        android:text="@string/personname" />
</FrameLayout>

    <TextView
        android:id="@+id/biotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/primary_text"
        android:text="@string/biography" />
    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/biotitle"
        android:layout_alignParentStart="true"
        android:textColor="@color/primary_text"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/boidetail" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>